<div class="error-container">
  <div class="container">
    <div class="error-message">
      <div class="empty-icon"><%= error.status === 404 ? '🔍' : '⚠️' %></div>
      <h2><%= error.status %> - <%= error.message %></h2>
      <% if (error.details) { %>
      <p style="white-space: pre-line;"><%= error.details %></p>
      <% } %>
      <div class="empty-actions">
        <a href="/" class="btn btn-primary">🏠 Go Home</a>
        <% if (typeof username !== 'undefined' && username) { %>
        <a href="/profile/<%= username %>" class="btn btn-outline">👤 Try Profile</a>
        <% } %>
      </div>
    </div>
  </div>
</div>