<!DOCTYPE html>
<html lang="en">
<head>
    <%- seo.generateMetaHTML(typeof metaData !== 'undefined' ? metaData : seo.getHomeMeta()) %>
    
    <% if (typeof structuredData !== 'undefined' && structuredData) { %>
    <%- seo.generateStructuredDataHTML(structuredData) %>
    <% } %>
    
    <link rel="stylesheet" href="/css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <% /* Google Analytics */ %>
    <% if (config.GA_TRACKING_ID) { %>
    <script async src="https://www.googletagmanager.com/gtag/js?id=<%= config.GA_TRACKING_ID %>"></script>
    <script>window.dataLayer=window.dataLayer||[];function gtag(){dataLayer.push(arguments);}gtag('js',new Date());gtag('config','<%= config.GA_TRACKING_ID %>');</script>
    <% } %>

    <% /* AdSense */ %>
    <% if (config.ADS.ENABLE_ADS && config.ADS.GOOGLE_ADSENSE_CLIENT) { %>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=<%= config.ADS.GOOGLE_ADSENSE_CLIENT %>" crossorigin="anonymous"></script>
    <% } %>

    <% /* Adsterra Social Bar */ %>
    <% if (config.ADS.ENABLE_ADS && config.ADS.ADSTERRA_SOCIAL_BAR_ID) { %>
    <script src="//pl<%= config.ADS.ADSTERRA_SOCIAL_BAR_ID %>.profitablegatecpm.com/p.js" async></script>
    <% } %>
</head>
<body>
    <header class="header">
        <div class="container">
            <% /* Adsterra Banner Ad */ %>
            <% if (config.ADS.ENABLE_ADS && config.ADS.ADSTERRA_BANNER_ID) { %>
            <div class="ad-slot ad-banner-top" id="adsterra-banner-top">
                <div class="ad-label">Advertisement</div>
                <script src="//ad.a-ads.com/<%= config.ADS.ADSTERRA_BANNER_ID %>?size=728x90" async></script>
            </div>
            <% } else if (config.ADS.ENABLE_ADS && config.ADS.GOOGLE_ADSENSE_CLIENT) { %>
            <div class="ad-slot ad-banner-top">
                <ins class="adsbygoogle" style="display:inline-block;width:728px;height:90px" data-ad-client="<%= config.ADS.GOOGLE_ADSENSE_CLIENT %>" data-ad-slot="<%= config.ADS.GOOGLE_ADSENSE_SLOT_BANNER %>"></ins>
                <script>(adsbygoogle=window.adsbygoogle||[]).push({});</script>
            </div>
            <% } %>
            
            <nav class="navbar">
                <div class="nav-brand">
                    <a href="/" class="logo">
                        <span class="logo-icon">üì±</span>
                        <span class="logo-text">iPeep</span>
                    </a>
                </div>
                
                <div class="nav-search">
                    <form action="/search" method="GET" class="search-form">
                        <input type="text" name="q" class="search-input" placeholder="Search Instagram username..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>" required>
                        <button type="submit" class="search-btn"><span class="search-icon">üîç</span></button>
                    </form>
                </div>
                
                <div class="nav-menu">
                    <a href="/" class="nav-link <%= currentPath === '/' ? 'active' : '' %>">Home</a>
                    <a href="/instagram-story-viewer" class="nav-link">Story Viewer</a>
                    <a href="/blog" class="nav-link">Blog</a>
                    <a href="/about" class="nav-link <%= currentPath.startsWith('/about') ? 'active' : '' %>">About</a>
                </div>
                
                <button class="mobile-menu-toggle" onclick="toggleMobileMenu()">
                    <span></span><span></span><span></span>
                </button>
            </nav>
        </div>
    </header>

    <main class="main">
        <%- body %>
    </main>

    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>iPeep</h4>
                    <p>View Instagram stories, profiles, and posts anonymously without login.</p>
                </div>
                
                <div class="footer-section">
                    <h4>Tools</h4>
                    <ul class="footer-links">
                        <li><a href="/instagram-story-viewer">Instagram Story Viewer</a></li>
                        <li><a href="/anonymous-instagram-viewer">Anonymous Viewer</a></li>
                        <li><a href="/picuki-alternative">Picuki Alternative</a></li>
                    </ul>
                </div>
                
                <div class="footer-section">
                    <h4>Resources</h4>
                    <ul class="footer-links">
                        <li><a href="/blog">Blog</a></li>
                        <li><a href="/about">FAQ</a></li>
                        <li><a href="/about/how-it-works">How It Works</a></li>
                    </ul>
                </div>
                
                <div class="footer-section">
                    <h4>Legal</h4>
                    <ul class="footer-links">
                        <li><a href="/about/terms">Terms of Service</a></li>
                        <li><a href="/about/privacy">Privacy Policy</a></li>
                        <li><a href="/about/contact">Contact</a></li>
                    </ul>
                </div>
            </div>
            
            <% /* Adsterra Native Ad in Footer */ %>
            <% if (config.ADS.ENABLE_ADS && config.ADS.ADSTERRA_NATIVE_ID) { %>
            <div class="ad-slot ad-native-footer" id="adsterra-native-footer">
                <div class="ad-label">Advertisement</div>
                <script src="//pl<%= config.ADS.ADSTERRA_NATIVE_ID %>.profitablegatecpm.com/p.js" async></script>
            </div>
            <% } %>
            
            <div class="footer-bottom">
                <p>&copy; <%= new Date().getFullYear() %> iPeep. All rights reserved.</p>
                <p class="disclaimer">This service is not affiliated with Instagram or Meta Platforms Inc.</p>
            </div>
        </div>
    </footer>

    <% /* Adsterra Popunder */ %>
    <% if (config.ADS.ENABLE_ADS && config.ADS.ADSTERRA_POPUNDER_ID) { %>
    <script src="//pl<%= config.ADS.ADSTERRA_POPUNDER_ID %>.profitablegatecpm.com/p.js" async></script>
    <% } %>

    <script src="/js/main.js"></script>
</body>
</html>
